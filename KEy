local function playStartupAnimation()
    local imageId = "127056580401847"
    local audioId = "2084290015"

    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "StartupAnimation"
    screenGui.IgnoreGuiInset = true
    screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(1, 0, 1, 0)
    frame.BackgroundColor3 = Color3.new(0, 0, 0)
    frame.BorderSizePixel = 0
    frame.Parent = screenGui

    local imageLabel = Instance.new("ImageLabel")
    imageLabel.Size = UDim2.new(0, 300, 0, 300)
    imageLabel.Position = UDim2.new(0.5, -150, 0.5, -150)
    imageLabel.Image = "rbxassetid://" .. imageId
    imageLabel.BackgroundTransparency = 1
    imageLabel.ScaleType = Enum.ScaleType.Fit
    imageLabel.Parent = frame

    local function playAudio()
        local sound = Instance.new("Sound")
        sound.SoundId = "rbxassetid://" .. audioId
        sound.Volume = 0.7
        sound.Parent = game:GetService("SoundService")
        sound:Play()
        sound.Ended:Connect(function()
            sound:Destroy()
        end)
        return sound
    end

    local function animate()
        local startupSound = playAudio()

        imageLabel.Size = UDim2.new(0, 50, 0, 50)
        imageLabel.Position = UDim2.new(0.5, -25, 0.5, -25)
        imageLabel.ImageTransparency = 1
        frame.BackgroundTransparency = 1

        local tweenService = game:GetService("TweenService")

        tweenService:Create(
            frame,
            TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
            {BackgroundTransparency = 0}
        ):Play()

        local imageTween = tweenService:Create(
            imageLabel,
            TweenInfo.new(0.8, Enum.EasingStyle.Back, Enum.EasingDirection.Out),
            {
                Size = UDim2.new(0, 300, 0, 300),
                Position = UDim2.new(0.5, -150, 0.5, -150),
                ImageTransparency = 0
            }
        )

        imageTween:Play()
        imageTween.Completed:Wait()

        wait(1)

        tweenService:Create(
            frame,
            TweenInfo.new(0.8, Enum.EasingStyle.Quad, Enum.EasingDirection.In),
            {BackgroundTransparency = 1}
        ):Play()

        tweenService:Create(
            imageLabel,
            TweenInfo.new(0.8, Enum.EasingStyle.Quad, Enum.EasingDirection.In),
            {ImageTransparency = 1}
        ):Play()

        wait(0.8)

        if startupSound then
            startupSound:Destroy()
        end

        screenGui:Destroy()
    end

    animate()
end

pcall(playStartupAnimation)

local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/ZenoFTAP/scripts/refs/heads/main/Orion%20V"))()

local correctKey = [[s]]
local OrionWindow
local keySuccess = false

local function removeOrionV()
    local coreGui = game:GetService("CoreGui")
    local orion = coreGui:FindFirstChild("OrionV")
    if orion then
        orion:Destroy()
    end
end

local function verifyKey(inputKey)
    return inputKey == correctKey
end

local function createGUI()
    OrionWindow = OrionLib:MakeWindow({
        Name = "KEY SYSTEM",
        HidePremium = true,
        SaveConfig = false,
        ConfigFolder = "Keysystem"
    })

    local KeyTab = OrionWindow:MakeTab({
        Name = "Key System",
        Icon = "rbxassetid://4483362458",
        PremiumOnly = false
    })

    local statusLabel = KeyTab:AddLabel("Please enter the key")
    local keyInputValue = ""

    KeyTab:AddTextbox({
        Name = "Input",
        Default = "",
        TextDisappear = false,
        Callback = function(Value)
            keyInputValue = Value
        end
    })

    KeyTab:AddButton({
        Name = "Enter",
        Callback = function()
            if verifyKey(keyInputValue) then
                statusLabel:Set("✅ Key verified! Closing...")
                keySuccess = true
                wait(0.5)
                removeOrionV()
            else
                statusLabel:Set("❌ Invalid key")
                OrionLib:MakeNotification({
                    Name = "Error",
                    Content = "The entered key is incorrect",
                    Image = "rbxassetid://4483345998",
                    Time = 3
                })
            end
        end
    })

    OrionLib:Init()
end

createGUI()

repeat task.wait() until keySuccess == true

return true
